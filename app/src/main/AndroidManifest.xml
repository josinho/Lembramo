<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gal.xieiro.lembramo" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MedicamentosActivity"
            android:label="@string/title_activity_medicamentos"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gal.xieiro.lembramo.MainActivity" />
        </activity>
        <activity
            android:name=".NewMedicamentoActivity"
            android:label="@string/title_activity_new_medicamento"
            android:parentActivityName=".MedicamentosActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gal.xieiro.lembramo.MedicamentosActivity" />
        </activity>
    </application>

</manifest>
